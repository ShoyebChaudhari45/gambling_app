<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <!-- HEADER BG -->
    <View
        android:id="@+id/viewHeaderBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_header_gradient"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- HEADER -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:tint="@android:color/white"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Single Digit"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtHeaderBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="5"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="16dp">

            <!-- BALANCE -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_diamond"
                    app:tint="@color/dark_blue"/>

                <TextView
                    android:id="@+id/txtBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="5"
                    android:textColor="@color/textPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Balance"
                    android:textColor="@color/textSecondary"
                    android:textSize="13sp"/>

            </LinearLayout>

            <!-- DATE + RADIO BUTTONS CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/txtCurrentDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sat 10-Jan-2026"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"/>

                    <RadioGroup
                        android:id="@+id/radioGroupOpenClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardOpen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/dark_blue"
                            app:strokeWidth="0dp">

                            <RadioButton
                                android:id="@+id/btnOpen"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Open"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:checked="true"
                                android:button="@drawable/ic_radio_white"
                                android:paddingHorizontal="18dp"
                                android:background="@android:color/transparent"/>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardClose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/dark_blue"
                            app:strokeWidth="0dp">

                            <RadioButton
                                android:id="@+id/btnClose"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Close"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:gravity="center"
                                android:button="@drawable/ic_radio_white"
                                android:paddingHorizontal="18dp"
                                android:background="@android:color/transparent"/>

                        </com.google.android.material.card.MaterialCardView>

                    </RadioGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- INPUT DETAILS CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- DIGITS -->
                    <EditText
                        android:id="@+id/etDigits"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter Digits"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textSecondary"
                        android:paddingHorizontal="0dp"
                        android:background="@null"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="#E0E0E0"/>

                    <!-- POINTS -->
                    <EditText
                        android:id="@+id/etPoints"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter Points"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textSecondary"
                        android:paddingHorizontal="0dp"
                        android:background="@null"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- PROCEED -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProceed"
                android:layout_width="130dp"
                android:layout_height="46dp"
                android:layout_gravity="end"
                android:text="Proceed"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:cornerRadius="23dp"
                app:backgroundTint="@color/dark_blue"
                app:elevation="4dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>