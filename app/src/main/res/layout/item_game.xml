<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- FULL CIRCULAR GAME IMAGE -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgGame"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_placeholder"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- GAME NAME -->
        <TextView
            android:id="@+id/txtGameName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="JODI"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            app:layout_constraintStart_toEndOf="@id/imgGame"
            app:layout_constraintTop_toTopOf="@id/imgGame"
            app:layout_constraintEnd_toStartOf="@id/btnPlay"/>

        <!-- PLAY BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlay"
            android:layout_width="92dp"
            android:layout_height="42dp"
            android:text="PLAY"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:cornerRadius="21dp"
            app:backgroundTint="#FFD966"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgGame"/>

        <!-- DIVIDER -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#E5E7EB"
            app:layout_constraintTop_toBottomOf="@id/imgGame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- RESULT -->
        <TextView
            android:id="@+id/txtGameSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Result :  -"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            app:layout_constraintTop_toBottomOf="@id/imgGame"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- VIEW DETAILS -->
        <TextView
            android:id="@+id/txtViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW DETAILS"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#7EC8FF"
            app:layout_constraintTop_toBottomOf="@id/imgGame"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
