<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- TOP ROW: TYPE & PRICE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- BID TYPE -->
            <TextView
                android:id="@+id/txtBidType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DP"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:fontFamily="sans-serif-medium"
                android:drawableStart="@drawable/ic_bid"
                android:drawablePadding="8dp"
                android:drawableTint="#1565C0"/>

            <!-- PRICE -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_price_badge"
                android:paddingHorizontal="14dp"
                android:paddingVertical="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- DIVIDER -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#E0E0E0"/>

        <!-- BOTTOM ROW: VALUE & DATE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- INPUT VALUE -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value:"
                    android:textSize="13sp"
                    android:textColor="#78909C"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/txtInputValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#37474F"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>

            <!-- DATE & TIME -->
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 Jan, 2:16 PM"
                android:textSize="12sp"
                android:textColor="#90A4AE"
                android:fontFamily="sans-serif"
                android:drawableStart="@drawable/ic_calendar_small"
                android:drawablePadding="6dp"
                android:drawableTint="#90A4AE"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>