<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEF7">

    <!-- ================= TOOLBAR ================= -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark_blue"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_back"
        app:title="Add Points"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= CONTENT ================= -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="32dp">

            <!-- CURRENT POINTS CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPoints"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/dark_blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <ImageView
                        android:id="@+id/imgDiamond"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_diamond"
                        app:tint="#FFF9C4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/txtPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="425"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintTop_toBottomOf="@id/imgDiamond"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/txtCurrent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Current Points"
                        android:textSize="14sp"
                        android:textColor="#B3FFFFFF"
                        android:fontFamily="sans-serif"
                        app:layout_constraintTop_toBottomOf="@id/txtPoints"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- NOTICE CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNotice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#FFF9C4"
                app:strokeColor="@color/dark_blue"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/cardPoints"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⚠️ Add Fund Notice"
                        android:textColor="@color/dark_blue"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingBottom="8dp"/>

                    <View
                        android:layout_width="60dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/dark_blue"
                        android:alpha="0.3"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MINIMUM DEPOSIT 300\n\nपेमेंट ऐड करने के बाद ऐप को रिफ्रेश करें।\n\nअगर आपका पेमेंट आपके वॉलेट में नहीं आता है तो पेमेंट का स्क्रीनशॉट व्हाट्सएप पर एडमिन को भेजें।"
                        android:textColor="@color/dark_blue"
                        android:textSize="13sp"
                        android:lineHeight="20dp"
                        android:gravity="center"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ENTER POINTS -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEnter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/cardNotice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/enterBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_keypad"
                        app:tint="@color/dark_blue"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:hint="Enter Points"
                        android:textColorHint="#999999"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:textColor="@color/dark_blue"
                        android:background="@null"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SELECT POINTS -->
            <TextView
                android:id="@+id/txtSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Select Points Amount"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/dark_blue"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toBottomOf="@id/cardEnter"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- QUICK BUTTONS GRID -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/txtSelect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Row 1 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn500"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:text="500"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/dark_blue"
                    app:strokeWidth="2dp"
                    app:rippleColor="#FFF9C4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn1000"
                    app:layout_constraintWidth_percent="0.31"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn1000"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:text="1000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/dark_blue"
                    app:strokeWidth="2dp"
                    app:rippleColor="#FFF9C4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn500"
                    app:layout_constraintEnd_toStartOf="@id/btn2000"
                    app:layout_constraintWidth_percent="0.31"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn2000"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:text="2000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/dark_blue"
                    app:strokeWidth="2dp"
                    app:rippleColor="#FFF9C4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn1000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.31"/>

                <!-- Row 2 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn5000"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="5000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/dark_blue"
                    app:strokeWidth="2dp"
                    app:rippleColor="#FFF9C4"
                    app:layout_constraintTop_toBottomOf="@id/btn500"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn10000"
                    app:layout_constraintWidth_percent="0.31"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn10000"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="10000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/dark_blue"
                    app:strokeWidth="2dp"
                    app:rippleColor="#FFF9C4"
                    app:layout_constraintTop_toBottomOf="@id/btn1000"
                    app:layout_constraintStart_toEndOf="@id/btn5000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.31"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ADD POINTS BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddPoints"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:text="Add Points"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/dark_blue"
                app:elevation="4dp"
                android:stateListAnimator="@null"
                app:layout_constraintTop_toBottomOf="@id/grid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>