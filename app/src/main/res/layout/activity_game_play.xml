<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- TOOLBAR - Updated with elevation and better color -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_back_white"
        app:title="Game"
        app:titleTextColor="@android:color/white" />

    <!-- HERO SECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:cardCornerRadius="48dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_single_digit"
                app:tint="@color/white" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtGameTitle"
            android:text="Single Digit"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="15:00"
            android:textSize="14sp"
            android:textColor="#B3FFFFFF"/>
    </LinearLayout>

    <!-- GAME OPTIONS GRID -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_marginTop="-40dp"
        android:paddingTop="40dp">

        <!-- Replace GridLayout with this: -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Row 1 -->
            <include
                android:id="@+id/option1"
                layout="@layout/item_game_option"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintDimensionRatio="1:1.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/option2"
                app:layout_constraintHorizontal_chainStyle="spread"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"/>

            <include
                android:id="@+id/option2"
                layout="@layout/item_game_option"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintDimensionRatio="1:1.2"
                app:layout_constraintStart_toEndOf="@+id/option1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"/>

            <!-- Row 2 -->
            <include
                android:id="@+id/option3"
                layout="@layout/item_game_option"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintDimensionRatio="1:1.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/option1"
                app:layout_constraintEnd_toStartOf="@+id/option4"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"/>

            <include
                android:id="@+id/option4"
                layout="@layout/item_game_option"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintDimensionRatio="1:1.2"
                app:layout_constraintStart_toEndOf="@+id/option3"
                app:layout_constraintTop_toBottomOf="@+id/option2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>